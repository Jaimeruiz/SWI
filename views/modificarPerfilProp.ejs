       <label for="contraseña"><strong>Telefono:</strong></label><br>
       <input type="tel" id="telefono" name="telefono" value="<%= user.telefono %>"><br>
       <label for="contraseña"><strong>Usuario:</strong></label><br>
       <input type="text" id="username" name="username" value="<%= user.username %>"><br>
       <label for="contraseña"><strong>Tarjeta:</strong></label><br>
       <input type="text" id="tarjeta" name="tarjeta" value="<%= user.tarjeta %>"><br>
       <label for="contraseña"><strong>Contraseña:</strong></label><br>
       <input type="password" id="password" name="password"><br>
       <label for="user"><strong>Rol:</strong></label><br>
       <select id="rol" name="rol" value="<%= user.rol %>">
          <option value="inquilino">Inquilino</option>
          <option value="propietario">Propietario</option>
       </select><br><br>
       <button class="btn btn-dark" type="submit">Modificar</button>
