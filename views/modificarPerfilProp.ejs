       <input id ="id" name="id" value="<%= user.id %>" type="hidden">
       <label for="user"><strong>Nombre:</strong></label><br>
       <input type="text" id="nombre" name="nombre" value="<%= user.nombre %>"><br>
       <label for="user"><strong>Apellidos:</strong></label><br>
